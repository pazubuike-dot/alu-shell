#!/usr/bin/env bash
# Manages the manage_my_process script (start, stop, restart)

PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

case "$1" in
    start)
        echo "Starting $SCRIPT"
        $SCRIPT &
        echo "$!" > "$PID_FILE"
        ;;
    stop)
        echo "Stopping $SCRIPT"
        kill "$(cat "$PID_FILE")"
        rm "$PID_FILE"
        ;;
    restart)
        $0 stop
        $0 start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
